<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather+Sans:ital,wght@0,300..800;1,300..800&family=Mukta:wght@200;300;400;500;600;700;800&family=Poppins:wght@500&display=swap" rel="stylesheet">
    <title>Document</title>
</head>
<body>
    <button onclick="window.location.href='/workerprofileedit'">Edit Profile</button>
     <div>
        <p><%= data.name %></p>
        <p><%= data.description %></p>
        <p><%= data.email %></p>
        <p>Address: <%= data.address %></p>
        <p>City: <%= data.city %></p>
        <p>Pincode: <%= data.pincode %></p>
        <p>Contact: <%= data.contact %></p>
        <p>Profession: <%= data.profession %></p>
        <p>Rating: <%= data.rating %></p>
        <p>No. of Ratings: <%= data.noofratings %></p>
     </div>
     <h1>booking deets</h1>
    <% books.forEach(function(book,index) { %>
        <div id="book<%= index %>">
            <p><strong>Problem title:</strong><%= book.problem %></p>
            <p><strong>Problem description:</strong><%= book.problemStatement %></p>
            <p><strong>Payment Status:</strong> <%= book.paymentstatus %></p>
            <p><strong>Booking Status:</strong> <%= book.bookingstatus %></p>
            <p><strong>Base Price:</strong> <%= book.baseprice %></p>
            <p><strong>Location:</strong> <%= book.locationLink %></p>
            <p><strong>Date:</strong> <%= book.date %></p>
            <p><strong>Time:</strong> <%= book.time %></p>
            <div>
                <% if (book.bookingstatus === 'pending') { %>
                    <button onclick="accepted('<%= index %>','<%= book._id %>')" id="accept<%= index %>">Accept</button>
                    <button onclick="rejected('<%= index %>','<%= book._id %>')" id="reject<%= index %>">Reject</button>
                    
                <% } else { %>
                    <% if (book.paymentstatus === 'pending') { %>
                        <button  onclick="reqpayment('<%= index %>','<%= book._id %>')" id="requestPaymentButton<%= index %>">Request Payment</button>
                    <% } %>
                    <button  onclick="cancel('<%= index %>','<%= book._id %>')" id="cancel<%= index %>">Cancel</button>
                <% } %>
            </div>
        </div>
    <% }); %>
    <script src="/scripts/workerdashboard.js"></script>
</body>
</html>

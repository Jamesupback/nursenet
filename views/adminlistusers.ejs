<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/scripts/listworkers.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Rubik:ital,wght@0,300..900;1,300..900&family=Workbench&display=swap" rel="stylesheet">
    <link rel="stylesheet"  href="./css/listworkers.css">
</head>
<style>
    .record{
        border-color: rgb(31, 57, 129);
    }
    strong{
        font-weight: 300;
    }
</style>
<body>
    <div id="preloader">
        <div class="bar">
            <div class="ball"></div>
        </div>
    </div>
    <header>
        <div id="title">NurseNet</div>
        <nav>
            <ul>
                <a href="/"><li>HOME</li></a>
                <a href="/about"><li>ABOUT</li></a>
                <a href="/logout"><li>LOGOUT</li></a>
            </ul>
        </nav> 
    </header>
    <h1>All Users</h1>
    <div id="filterbox">
        <div class="coolinput">
            <label for="input" class="text">Name:</label>
            <input type="text" id='namesearch'placeholder="Search name..." name="namesearch" class="input">
        </div>
        <div class="coolinput">
            <label for="input" class="text">City:</label>
            <input type="text" id='citysearch' placeholder="Search city..." name="input" class="input">
        </div>
    </div>
    <div id="recordholder">
        <% data.forEach(record => { %>
            <div class="record <%= record.status === 'busy' ? 'busyrec' : 'availablerec' %>">
                <h2><strong style="color:aquamarine">Name:</strong> <%= record.name %></h2>
                <p><strong style="color:aquamarine">City:</strong> <%= record.city %></p>
                <p><strong style="color:aquamarine">Address:</strong> <%= record.address %></p>
                <p><strong style="color:aquamarine">Contact number:</strong> <%= record.contact %></p>
                <p><strong style="color:aquamarine">Pincode:</strong> <%=record.pincode%></p>
                <button id='bottone1' onclick="window.location.href='/admindeleteuser?id=<%= record.id %>'" style="background-color: rgb(246, 119, 119);">Delete user</button>
            </div>
        <% }) %>
    </div>
    <script>
        window.addEventListener('load', () => {
            const preloader = document.getElementById('preloader');
            preloader.style.display = 'none';
        });
    </script>
</body>
</html>